    WriteAsmHook("xorpd xmm0, ds:0x1703930; addsd xmm0, ds:0x1703940", 0x10ED14A, HookBehavior.Before);

    fixed (double* p0 = &_0)
    fixed (double* p50_60 = &_50_60)
    {
        WriteProtected<uint>(0x10ED879, (uint)p0);
        WriteProtected<uint>(0x10ED884, (uint)p50_60);
